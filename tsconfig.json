{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2018",
    "sourceMap": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "types": ["node"],
    "strict": true,
    "pretty": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "noEmitHelpers": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "*.d.ts",
    "**/tmp",
    "**/blueprint-templates",
    "**/.github"
  ]
}
